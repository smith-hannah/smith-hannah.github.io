---
import { Image } from 'astro:assets';
import heroData from '../data/hero.json';
import siteData from '../data/site.json';

const { greeting, tagline, description, socialLinks, image } = heroData;
const { name } = siteData;
---

<section class="hero">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">
        {greeting} {name}
      </h1>
      
      <h2 class="hero-tagline">{tagline}</h2>
      
      <p class="hero-description">{description}</p>
      
      <div class="social-links">
        {socialLinks.map((link) => (
          <a href={link.href} class="social-link" aria-label={link.label} target={link.platform !== 'email' ? '_blank' : undefined} rel={link.platform !== 'email' ? 'noopener noreferrer' : undefined}>
            {link.platform === 'linkedin' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            )}
            {link.platform === 'email' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            )}
            {link.platform === 'tiktok' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
              </svg>
            )}
            <span>{link.label}</span>
          </a>
        ))}
      </div>
    </div>
    
    <div class="hero-image">
      <Image src={image.src} alt={name} width={400} height={400} />
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background-color: #F3E8E2;
    padding: 6rem 2rem 2rem;
  }

  .hero-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .hero-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 4rem;
    font-weight: 600;
    color: #2B2B2B;
    line-height: 1.1;
    margin: 0;
  }

  .hero-tagline {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.75rem;
    font-weight: 600;
    color: #2B2B2B;
    line-height: 1.3;
    margin: 0.25rem 0 0 0;
  }

  .hero-description {
    font-family: 'Montserrat', sans-serif;
    font-size: 0.95rem;
    line-height: 1.7;
    color: #2B2B2B;
    max-width: 500px;
    margin: 0.5rem 0 0 0;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    color: #FAFAFA;
    background-color: #F6B1C3;
    padding: 0.75rem 1.25rem;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background-color: #f49aae;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(246, 177, 195, 0.4);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image img {
    width: 100%;
    max-width: 550px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    object-fit: cover;
  }

  @media (max-width: 968px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .hero-title {
      font-size: 3rem;
    }

    .hero-tagline {
      font-size: 1.5rem;
    }

    .hero-image {
      order: -1;
    }

    .hero-image img {
      max-width: 450px;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: 5rem 1.5rem 2rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-tagline {
      font-size: 1.25rem;
    }

    .hero-description {
      font-size: 0.9rem;
    }

    .hero-image img {
      max-width: 100%;
    }
  }
</style>
