---
import siteData from '../data/site.json';
import colors from '../data/colors.json';

interface Props {
	title?: string;
	description?: string;
}

const { title = siteData.title, description = siteData.description } = Astro.props;
const pageTitle = title === siteData.title ? title : `${title} | ${siteData.name}`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/x-icon" href="/soap.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap" media="print" onload="this.media='all'" />
		<noscript>
			<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap" />
		</noscript>
		<title>{pageTitle}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style define:vars={{
	primary: colors.primary,
	accent: colors.accent,
	bgMain: colors.background.main,
	bgSecondary: colors.background.secondary,
	bgWhite: colors.background.white,
	textPrimary: colors.text.primary,
	textSecondary: colors.text.secondary,
	textTertiary: colors.text.tertiary,
	textWhite: colors.text.white
}} is:global>
	:root {
		--primary: var(--primary);
		--accent: var(--accent);
		--bg-main: var(--bgMain);
		--bg-secondary: var(--bgSecondary);
		--bg-white: var(--bgWhite);
		--text-primary: var(--textPrimary);
		--text-secondary: var(--textSecondary);
		--text-tertiary: var(--textTertiary);
		--text-white: var(--textWhite);
	}
</style>

<style is:global>
	* {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
	}

	body {
		font-family: 'Montserrat', sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
</style>
